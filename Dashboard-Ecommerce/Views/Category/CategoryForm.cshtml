@model CategoryDto
@{
    ViewData["Title"] = "Category Form";
}

<h2>@(Model.ItemCategoryId > 0 ? "Edit" : "Create") Category</h2>


<hr />

<section class="row">
    <div class="col-md-5">
        <form method="POST" asp-action="@(Model.ItemCategoryId > 0 ? "Edit" : "Create")" enctype="multipart/form-data">
            <input type="hidden" asp-for="ItemCategoryId" />
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label text-muted">ِArabic Category Name</label>
                <input type="text" class="form-control" asp-for="ItemCatDescA" maxlength="100">
                <span asp-validation-for="ItemCatDescA" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label text-muted">ِEnglish Category Name</label>
                <input type="text" class="form-control" asp-for="ItemCatDescE" maxlength="100">
                <span asp-validation-for="ItemCatDescE" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary"><i class="bi bi-check"></i> Save</button>
            <a asp-controller="category" asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-x"></i> Cancel</a>
        </form>
    </div>
</section>